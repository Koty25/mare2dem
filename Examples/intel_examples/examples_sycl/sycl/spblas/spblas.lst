# add spblas domain to domains_list variable
domains_list := $(domains_list) spblas

# main list of functions in this domain, use format
# <domain-folder-name>/<function_name_without_extension>

spblas_common := \
spblas/sparse_gemv \
spblas/sparse_gemv_usm \
spblas/sparse_trsv \
spblas/sparse_trsv_usm \
spblas/sparse_trmv \
spblas/sparse_symv \
spblas/sparse_gemvdot \
spblas/sparse_gemm \
spblas/sparse_gemm_usm \
spblas/sparse_cg

# supports SYCL CPU device offloading
spblas_cpu := $(spblas_common)

# supports SYCL GPU device offloading
spblas_gpu := $(spblas_common)

# supports running on sycl host
spblas_host := $(spblas_common)

# sorts and removes duplicates from between cpu, gpu and host spblas list
spblas_all := $(sort $(spblas_gpu) $(spblas_cpu) $(spblas_host))

