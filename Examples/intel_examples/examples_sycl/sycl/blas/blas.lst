# add blas domain to domains_list variable
domains_list := $(domains_list) blas

# main list of functions in this domain, use format
# <domain-folder-name>/<function_name_without_extension>

blas_common := \
blas/gemm \
blas/gemv \
blas/axpy \
blas/iamax \
blas/gemm_usm


# supports SYCL CPU device offloading
blas_cpu := $(blas_common)

# supports SYCL GPU device offloading
blas_gpu := $(blas_common)

# supports running on sycl host
blas_host := $(blas_common)

# sorts and removes duplicates from between cpu, gpu and host blas list
blas_all := $(sort $(blas_gpu) $(blas_cpu) $(blas_host)) 

